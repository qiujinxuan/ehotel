    <view class="select_item juc_colum_b {{select_bottom=='2'?'act_bg':''}}"  bindtap="switchact" data-index="2">
        <view class="day mb10 {{select_bottom=='2'?'act_blanck':''}}">
            1天
        </view>
        <view class="money">
            <text class="{{select_bottom=='2'?'act_blanck':''}}">￥</text>
