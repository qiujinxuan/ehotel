    <view class="select_item juc_colum_b {{select_bottom=='1'?'act_bg':''}}"  bindtap="switchact" data-index="1">
        <view class="day mb10 {{select_bottom=='1'?'act_blanck':''}} ">
            3小时
        </view>
        <view class="money">
            <text class=" {{select_bottom=='1'?'act_blanck':''}}">￥</text>
