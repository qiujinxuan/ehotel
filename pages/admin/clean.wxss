.tm{
    height: 600px;
    padding: 5rpx;
}

.m{
    width: 95%;
    border: 1px solid #D0181A;
    border-radius: 3px;
    margin: 5rpx auto;
    padding: 10rpx;
    background-color: #F0F3EF;
    color: #D0181A;
}

.m-data{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
}

.m-data-left{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}

.m-data-right{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}

.m-data-top-left{
    width: 60%;
}

.m-data-top-right{
    width: 40%;
}

.m-green{
    color: #0feb00;
}

.container {
    display: flex;
    align-content: flex-start;
    flex-direction: column;
    box-sizing: border-box;
} 